<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4A92F4"
    tools:context=".JadwalActivity">

    <ImageView
        android:id="@+id/img_header_piket"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/img_arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_jadwalah"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/notosansbold"
        android:text="Jadwal"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/img_header_piket"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_jadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/img_header_piket">

            <ImageView
                android:id="@+id/background_kode"
                android:layout_width="330dp"
                android:layout_height="404dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/img_kode"
                android:layout_width="199.71dp"
                android:layout_height="390dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/img_kode"
                app:layout_constraintBottom_toBottomOf="@id/background_kode"
                app:layout_constraintStart_toStartOf="@id/background_kode"
                app:layout_constraintTop_toTopOf="@id/background_kode" />

            <TextView
                android:id="@+id/txt_jadwal_1"
                android:layout_width="116dp"
                android:layout_height="64dp"
                android:layout_marginTop="75dp"
                android:fontFamily="@font/k2dregular"
                android:text="@string/kodeguru"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/background_kode"
                app:layout_constraintStart_toEndOf="@id/img_kode"
                app:layout_constraintTop_toTopOf="@id/background_kode" />

            <ImageView
                android:layout_width="90dp"
                android:layout_height="124.08dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/img_jadwal_1"
                app:layout_constraintBottom_toBottomOf="@id/background_kode"
                app:layout_constraintEnd_toEndOf="@id/background_kode"
                app:layout_constraintStart_toEndOf="@id/img_kode" />

            <ImageView
                android:id="@+id/background_senin"
                android:layout_width="330dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/background_kode" />

            <ImageView
                android:layout_width="321dp"
                android:layout_height="107dp"
                android:src="@drawable/jadwal_senin"
                app:layout_constraintBottom_toBottomOf="@id/background_senin"
                app:layout_constraintEnd_toEndOf="@id/background_senin"
                app:layout_constraintStart_toStartOf="@+id/background_senin"
                app:layout_constraintTop_toTopOf="@id/background_senin" />

            <ImageView
                android:id="@+id/background_selasa"
                android:layout_width="330dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/background_senin" />

            <ImageView
                android:layout_width="321dp"
                android:layout_height="107dp"
                android:src="@drawable/jadwal_selasa"
                app:layout_constraintBottom_toBottomOf="@id/background_selasa"
                app:layout_constraintEnd_toEndOf="@id/background_selasa"
                app:layout_constraintStart_toStartOf="@id/background_selasa"
                app:layout_constraintTop_toTopOf="@id/background_selasa" />

            <ImageView
                android:id="@+id/background_rabu"
                android:layout_width="330dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/background_selasa" />

            <ImageView
                android:layout_width="321dp"
                android:layout_height="107dp"
                android:src="@drawable/jadwal_rabu"
                app:layout_constraintBottom_toBottomOf="@id/background_rabu"
                app:layout_constraintEnd_toEndOf="@id/background_rabu"
                app:layout_constraintStart_toStartOf="@id/background_rabu"
                app:layout_constraintTop_toTopOf="@id/background_rabu" />

            <ImageView
                android:id="@+id/background_kamis"
                android:layout_width="330dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/background_rabu" />

            <ImageView
                android:layout_width="321dp"
                android:layout_height="107dp"
                android:src="@drawable/jadwal_kamis"
                app:layout_constraintBottom_toBottomOf="@id/background_kamis"
                app:layout_constraintEnd_toEndOf="@id/background_kamis"
                app:layout_constraintStart_toStartOf="@id/background_kamis"
                app:layout_constraintTop_toTopOf="@id/background_kamis" />

            <ImageView
                android:id="@+id/background_jumat"
                android:layout_width="330dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/background_kamis" />

            <ImageView
                android:layout_width="321dp"
                android:layout_height="107dp"
                android:src="@drawable/jadwal_jumat"
                app:layout_constraintBottom_toBottomOf="@id/background_jumat"
                app:layout_constraintEnd_toEndOf="@id/background_jumat"
                app:layout_constraintStart_toStartOf="@id/background_jumat"
                app:layout_constraintTop_toTopOf="@id/background_jumat" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintTop_toBottomOf="@id/background_jumat" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>