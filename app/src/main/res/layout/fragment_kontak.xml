<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.KontakFragment">

    <TextView
        android:id="@+id/txt_contactus"
        android:layout_width="165dp"
        android:layout_height="41dp"
        android:layout_marginLeft="35dp"
        android:fontFamily="@font/notosans_medium"
        android:text="Contact Us"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dumptext1"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/notosans"
        android:text="@string/contactus"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_contactus" />

    <ImageButton
        android:id="@+id/btn_cs"
        android:layout_width="302dp"
        android:layout_height="52dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/img_cs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dumptext1" />

    <ImageButton
        android:id="@+id/btn_sdm"
        android:layout_width="302dp"
        android:layout_height="52dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/img_sdm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_cs" />

    <TextView
        android:id="@+id/txt_keep"
        android:layout_width="219dp"
        android:layout_height="27dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/notosans_medium"
        android:text="Keep In Touch With Us"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_sdm" />

    <ImageView
        android:id="@+id/logo3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_keep" />

    <View
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@id/logo3"/>

</androidx.constraintlayout.widget.ConstraintLayout>